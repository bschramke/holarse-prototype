!!! 5
%html(lang="de")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "HOLARSE - Spielen unter Linux"
    = csrf_meta_tags
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css", media: "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-theme.min.css", media: "all"
    = stylesheet_link_tag "//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css", media: "all"
    = stylesheet_link_tag "application", media: "all"
    = favicon_link_tag 'favicon.png', :rel => 'shortcut icon'
    = javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" 
    = javascript_include_tag "//code.jquery.com/ui/1.10.3/jquery-ui.min.js"
    = javascript_include_tag "//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"
    = javascript_include_tag "//togetherjs.com/togetherjs-min.js"
    = javascript_include_tag "application"

  %body
    .wrap
      %nav.navbar.navbar-inverse{:role => "navigation"}
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar          
          = link_to root_path, :class => "navbar-brand" do
            Holarse - Spielen unter Linux
        / Collect the nav links, forms, and other content for toggling
        .collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => "#"} News
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Spiele
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"} Action
                %li
                  %a{:href => "#"} Another action
                %li
                  %a{:href => "#"} Something else here
                %li
                  %a{:href => "#"} Separated link
                %li
                  %a{:href => "#"} One more separated link
            %li
              %a{:href => "#"} Tools            
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Holarse-Dienste
                %b.caret
              %ul.dropdown-menu
                %li
                  %a{:href => "#"} Mumble
                %li
                  %a{:href => "#"} Jabber
                %li
                  %a{:href => "#"} Minecraft/Gameserver
            %li
              = link_to "Youtube", videos_path
            %li
              = link_to "Twitter", twitter_path
            %li
              = link_to discount_events_path do
                %span#discount-count
                  Rabattaktionen
          = semantic_form_for 'search', {:html => { :class => 'navbar-form navbar-right' }, :url => search_path} do |f|
            = f.input :q, :label => false, :as => :search, :input_html => { :class => "form-control" }, :placeholder => "Holarse durchsuchen"
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  Neue Inhalte
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to 'Neue News', new_news_path
                  %li
                    = link_to 'Neuer Artikel', new_article_path
                  %li
                    %a{:href => "#"} Neuer Forumsbeitrag
                  %li
                    %a{:href => "#"} Neuer Spieleaufruf
              %li
                = link_to user_path(current_user) do
                  = current_user.username
                  = content_tag :span, :class => "badge" do
                    = current_user.decorate.unread_messages.count
              %li
                = link_to "Abmelden", logout_path
            - else
              %li
                = link_to "Registrieren", register_path
              %li
                = link_to "Anmelden", login_path
        / /.navbar-collapse  

      .row
        .col-md-2
          .container
            = render :partial => "navcontext"            
        .col-md-10
          .container

            .flash
              - flash.each do |name, msg|
                = content_tag :div, msg.html_safe, class: "alert alert-#{name}"

            %ol.breadcrumb
              = render_breadcrumbs

            = yield
