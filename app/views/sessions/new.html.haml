.input-group
  = semantic_form_for 'session', {:html => {:id => "new_session"}, :url => session_path} do |f|
    =  f.inputs :name => 'Login Details' do
      .input-group
        %span.input-group-addon
          @    
        = f.input :username, :input_html => { :class => "form-control" }, :placeholder => "Benutzername"
      .input-group
        %span.input-group-addon
          %span.glyphicon.glyphicon-tower
        = f.input :password, :as => :password, :input_html => { :class => "form-control" }, :placeholder => "Passwort"
      .input-group        
        = f.actions do
          = f.action :submit, :button_html => {:class => "btn btn-primary"}
