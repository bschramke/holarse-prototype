= semantic_form_for 'session', { html: { id: "new_session", role: "form" }, url: session_path } do |f|
  = f.inputs do
    .form-group
      = f.input :username, input_html: { class: "form-control" }
    .form-group
      = f.input :password, input_html: { class: "form-control" }
  = f.actions do
    .form-group
      = f.action :submit, as: :button, button_html: { class: "btn btn-default", type: "submit" }
