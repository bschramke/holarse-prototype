%header
  %h1
    = t('.title')
  %h2

%article
  = semantic_form_for @user do |f|
    = f.semantic_errors :username, :email, :password, :password_confirmation
    = f.inputs do
      .input-group
        = f.input :username, input_html: { class: "form-control" }
      .input-group
        = f.input :email, as: :email, input_html: { class: "form-control" }
      .input-group
        = f.input :password, input_html: { class: "form-control" }
      .input-group
        = f.input :password_confirmation, input_html: { class: "form-control" }
    = f.actions do
      = f.action :submit
