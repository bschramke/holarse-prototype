.panel.panel-default
  - @tags.each_key do |key|
    .panel-heading
      = key
    %ul.list-group
      - tag_cloud(@tags[key], %w(css1 css2 css3 css4)) do |tag, css_class|
        %li.list-group-item
          = link_to tag.name, searchtag_path(tag.name)

