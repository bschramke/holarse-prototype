%article
  %header
    %h1
      = t('.title', :title => @news.title)
  %p
    = form_for @news do |f|
      %p
        = f.label :title, "Titel"
        = f.text_field :title
      %p
        = f.label :subtitle, "Untertitel"
        = f.text_field :subtitle
      %p
        = f.label :content, "Inhalt"
        %br/
        = f.text_area :content, :class => "content"
      %p
        = f.label :tag_list, "Tags durch Kommas getrennt"
        = f.text_field :tag_list
      %p
        = f.fields_for :screenshots do |builder|
          = render 'screenshot_fields', :f => builder
        = link_to_add_fields "Screenshot hinzufÃ¼gen", f, :screenshots
      %p
        = f.fields_for(:videos) do |v|
          = v.label :url, "Videourl"
          = v.text_field :url
          = v.label :description, "Videobeschreibung"
          = v.text_field :description
      %p
        = f.fields_for :links do |builder|
          = render 'link_fields', :f => builder
        = link_to_add_fields "Add links", f, :links
      %p
        = f.submit "Speichern"
