.row.margin-bottom-40
  .col-md-6
    %button#toggle-newsview.btn-u.btn-block{:type => "button", :"data-newsview" => "short"}
      = fa_icon "file"
      Kurz-/Lang-News
  .col-md-6.hidden-sm.hidden-xs
    %button#toggle-livepreview.btn-u.btn-block{:type => "button"}
      = fa_icon "refresh"
      Live-Vorschau
 
.row
  #input.col-md-6
    = semantic_form_for @news do |f|
      = f.inputs 'Inhalt' do
        .form-group
          = f.input :title, input_html: { class: "form-control" }
        .form-group
          = f.input :subtitle, input_html: { class: "form-control" }
        .form-group
          = f.input :content, as: :text, input_html: { rows: 20, cols: 120, class: "form-control", id: "markup-edit-content" }
        .form-group
          = f.input :news_category, label_method: :name, input_html: { class: "form-control" }
        .form-group
          = f.input :category_list, input_html: { class: "form-control tagsinput", :"data-context" => "categories" }
      = f.actions do
        .form-group
          = f.action :submit, button_html: { name: "save", class: "btn btn-primary" }
          = f.action :submit, label: "Als Entwurf speichern", button_html: { name: "save-as-draft", class: "btn btn-warning" }
  .col-md-6.hidden-sm.hidden-xs#livepreview
    %p#markuppreviewtext
