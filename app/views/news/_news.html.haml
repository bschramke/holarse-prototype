%li.news
  %header.news
    %h1
      = link_to news.title, news
    %h2
      .author
        = raw t('.author', :name => link_user(news.author))
      %time.date{:datetime => "#{news.updated_at}"}
        = t('.created_at', :date => l(news.updated_at))
      .comments
        = t('.comments', :count => news.comments.count)
  %article.newsitem{:"data-id" => "#{news.id}"}
    = image_tag(news.screenshots.first.img) if news.has_screenshots?
    = wiki_preview shorten news.content, 500
