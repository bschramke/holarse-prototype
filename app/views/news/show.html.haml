%article
  %header
    %h1
      = @news.title
    %h2
      = @news.subtitle
    %h3
      = link_user @news.author

%p
  = @news.content

%p
  = @news.tags.join(', ')

%p
  = t('.videos')
  %ul
    - @news.videos.each do |video|
      %li
        = video[:description]
        %br/
        != embed_youtube video

%p
  = t('.links')
  %ul
    - @news.links.each do |link|
      %li
        = link_to link.url
