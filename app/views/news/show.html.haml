.container.blog-page.blog-item
  .blog.margin-bottom-40
    %h2
      = @news.title
    %h3
      = @news.secondary_title
    .blog-post-tags
      %ul.list-unstyled.list-inline.blog-info.blog-tags
        %li
          = fa_icon "clock-o"
          = time_field @news.updated_at
        %li
          = fa_icon "pencil"
          = @news.authors_list.html_safe
        %li
          = fa_icon "archive"
          = @news.category 
        %li
          = fa_icon "tags"
          - @news.tags.each do |tag|
            = link_to tag, searchtag_path(tag)
    - @news.news_updates.each_with_index do |news_update, index|
      %blockquote
        %small
          Update vom
          = time_field news_update.created_at
          von
          = link_user news_update.user
        %p
          .autolinkable{:"data-ignores" => @news.titles}
            = news_update.content.html_safe
    .autolinkable{:"data-ignores" => @news.titles}
      = @news.content.html_safe

.container
  .panel.panel-default#link-container
    .panel-heading
      %h3.panel-title
        Links
    .panel-body
      .list-group
        %ul#newslinks

.container
  .media
    %a{:name => "comments"}
    %h3
      Kommentare
    = render @news.comments.decorate

  = show_commentbox @news
