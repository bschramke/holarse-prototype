%article
  %header
    %h1
      = @news.title
    %h2
      = @news.subtitle
    %h3
      = raw t('.author', :name => link_user(@news.user))
      %time.date{:datetime => "#{@news.updated_at}"}
      = t('.created_at', :date => l(@news.updated_at))
    %h4

  %p
    %pre
      %code{:data => {:language => "wiki"}}
        = @news.content

  %p
    = wiki_detail @news.content

  %h3
    Screenshots
  .screenshots
    %ul
      -@news.screenshots.each do |screenshot|
        %li
          = screenshot[:description]
          = image_tag screenshot.img.url

  %h3
    = t('.videos')
  .videos
    %ul
      - @news.videos.each do |video|
        %li
          = video[:description]
          %br/
          != embed_youtube video

  %h3
    = t('.links')
  .links
    %ul
      - @news.links.each do |link|
        %li
          = link_to link.description, link.url
    
