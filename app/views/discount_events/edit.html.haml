= semantic_form_for @discount_event do |f|
  = f.semantic_errors :name, :startdate, :enddate, :website, :description, :sourceurl
  = f.inputs do 
    .form-group
      = f.input :name, input_html: { class: "form-control" }
    .form-group
      = f.input :startdate, as: :string, input_html: { class: "form-control" }
    .form-group
      = f.input :enddate, as: :string, input_html: { class: "form-control" }
    .form-group
      = f.input :website, as: :url, required: true, input_html: { class: "form-control" }
    .form-group
      = f.input :description, required: false, as: :text, input_html: { class: "form-control" }
    .form-group
      = f.input :sourceurl, as: :url, required: false, input_html: { class: "form-control" }
  = f.actions do
    = f.action :submit, as: :button, button_html: { class: "btn btn-primary" }
    = f.action :submit, as: :button, label: "Als Entwurf speichern", name: "save-as-draft", button_html: { class: "btn-u btn-u-green" }
