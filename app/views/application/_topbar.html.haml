/ topbar
.topbar-v1.margin-bottom-20
  .container
    .row
      .col-md-6
        %ul.list-unstyled.top-v1-contacts
          %li
            = link_to "#" do
              = fa_icon "envelope"
              Kontakt
          %li
            = link_to "mumble://www.holarse-linuxgaming.de:64738" do
              = fa_icon "phone"
              Mumble
          %li
            = link_to "irc://irc.oftc.net:6667/holarse-gaming" do
              = fa_icon "users"
              Chat
      .col-md-6
        %ul.list-unstyled.top-v1-data
          %li
            - if current_user
              .btn-group
                %button.btn.btn-danger.btn-xs(type="button")
                  Neu anlegen
                %button.btn.btn-danger.btn-xs.dropdown-toggle{:"data-toggle" => "dropdown", :"type" => "button"}
                  = fa_icon "chevron-down"
                %ul.dropdown-menu(role="menu")
                  %li
                    = link_to "Neuer Artikel", new_article_path
                  %li
                    = link_to "Neue News", new_news_path
                  %li
                    = link_to "Neue Aktion", new_discount_event_path
          %li
            = link_to root_path do
              = fa_icon "home"
          %li
            = link_to discount_events_path do
              = fa_icon "gift"
          %li
            = link_to videos_path do
              = fa_icon "youtube-play"

          - if current_user
            %li
              = link_to "Abmelden", logout_path
            %li
              = link_to "Profil", current_user
          - else
            %li
              = link_to "Login", login_path
            %li
              = link_to "Registrieren", register_path
                          
