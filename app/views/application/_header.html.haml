%aside.search
  = semantic_form_for 'search', :url => search_path do |f|
    = f.input :q, :label => false 

%nav.user 
  %ul
    - if current_user.present?
      %li.profile
        = link_user current_user
      %li.logout
        = link_to(t('.logout'), logout_path)
    - else
      %li.login
        = link_to(t('.login'), login_path)
      %li.register 
        = link_to t('.register'), new_user_path
%nav.page
  %ul
    %li
      = link_to videos_path do
        = image_tag "youtube.png"
    %li
      = link_to twitter_path do
        = image_tag "twitter.png"

