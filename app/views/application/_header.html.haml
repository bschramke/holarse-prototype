%aside.logo
  = link_to root_path do
    = image_tag "holarse_logo_2.png", :class => "logo"

%aside.search
  = semantic_form_for 'search', :url => search_path do |f|
    = f.input :q, :label => false 

%nav.user 
  %ul
    - if current_user.present?
      %li.profile
        = link_user current_user
      %li.logout
        = link_to(t('.logout'), logout_path)
    - else
      %li.login
        = link_to(t('.login'), login_path)
      %li.register 
        = link_to t('.register'), new_user_path
    %li.new
      = link_to t('.new'), newcontent_path

