%aside.logo
  = link_to root_path do
    = image_tag "holarse_logo.png", :class => "logo"

%aside.search
  = form_tag search_path, :method => :get do |f|
    = text_field_tag :q, params[:q], {:class => 'search_field'}

%nav.user 
  %ul
    - if current_user.present?
      %li
        = link_user current_user
      %li
        = link_to(t('.logout'), logout_path)
    - else
      %li
        = link_to(t('.login'), "#", :id => "loginform-link")
      %li 
        = link_to t('.register'), new_user_path
        = render "sessions/loginform"
