/ header
.header
  .navbar.navbar-default{:role => "navigation"}
    .container
      .navbar-header
        %button.navbar-toggle{:type => "button", :"data-toggle" => "collapse", :"data-target" => ".navbar-responsive-collapse"}
          %span.sr-only
            Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to root_path, class: "navbar-brand" do
          = image_tag "holarse_logo.svg", id: "logo-header", class: "img-responsive"
      .collapse.navbar-collapse.navbar-responsive-collapse
        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :"data-hover" => "dropdown", :"data-delay" => "0", :"data-close-others" => "false", :href => "#"}
              Spiele
              = fa_icon "angle-down"
            %ul.dropdown-menu
              - get_genres.each do |genre|
                %li
                  = link_to genre.name, searchtag_path(genre.name)
          %li
            = link_to "Videos", videos_path
          %li
            = link_to discount_events_path do
              Rabattaktionen
              %span#discount-event-count.badge
                0
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :"data-hover" => "dropdown", :"data-delay" => "0", :"data-close-others" => "false", :href => "#"}
              Dienste
              = fa_icon "angle-down"
            %ul.dropdown-menu
              %li
                = link_to holarse_service_path do
                  = fa_icon "bars"
                  Allgemein
              %li.divider
              %li
                = link_to holarse_service_mumble_path do
                  = fa_icon "microphone"
                  Mumble
              %li
                = link_to holarse_service_jabber_path do
                  = fa_icon "comments"
                  IRC und Jabber
              %li
                = link_to holarse_service_gameserver_path do
                  = fa_icon "gamepad"
                  Gameserver
              %li
                = link_to holarse_service_communities_path do
                  = fa_icon "group"
                  Communities
              %li
                = link_to "http://files.holarse-linuxgaming.de" do
                  = fa_icon "cloud"
                  Holarse klaÊŠd
          %li
            = semantic_form_for 'search', html: { class: "navbar-form", role: "search"}, :url => search_path do |f|
              = f.input :q, :label => false, :as => :search, :input_html => { :class => "form-control searchfield" }
