#profile
  %ul.profile
    - if current_user
      %li= link_to image_tag(current_user.avatar, :size => "20x20"), current_user
      %li= link_to t('.logout', :username => current_user.username), logout_path
    - else
      %li= link_to image_tag("login-photo.svg", :size => "20x20", :alt => t('.login')), login_path
      %li= link_to t('.login'), login_path
      %li= link_to t('.register'), new_user_path, {:class => "register"}
      
