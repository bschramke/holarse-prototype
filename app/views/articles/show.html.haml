.page-header
  = content_tag :h1 do
    = @article.title
    = content_tag :small do
      = @article.alternate_title
      = project_activity_indicator(@article.project_activity_state, "pull-right") if @article.project_activity_state
  .text-muted
    .text-left
      %em
        = @article.tags.join ", "
    .text-left
      = @article.authors_list.html_safe

.autolinkable{:"data-ignores" => @article.titles}
  = @article.content.html_safe

%p.lead
  Screenshots
  .row
    - require 'faker'
    - 10.times do |t|
      .col-sm-2.col-md-4
        = link_to "http://lorempixel.com/1024/768/technics/#{t+1}", class: "fancybox fancybox.image", title: "#{Faker::Lorem.words(3).join " "}", rel: "gallery" do
          %img{:"src" => "http://lorempixel.com/300/180/technics/#{t+1}"}
        .caption
          = Faker::Lorem.sentences(3).join " "

%p.lead
  Videos

  .row
    - 5.times do
      .col-sm-2.col-md-4
        Youtube-Video

%hr
%a{:name => "comments"}
%p.lead
  Kommentare:
%ul.list-group
  = render @article.comments.decorate

= show_commentbox @article
