%article
  %header
    %h1
      = @article.title
    %h2
      = @article.alternate_title
    %h3
      = raw t('.author', :name => link_user(@article.user))
      %time.date{:datetime => "#{@article.updated_at}"}
      = t('.created_at', :date => l(@article.updated_at))

  .autolinkable= render_markup @article.content
