- if !@article.respond_to?("length") && !@article.new_record?
  %nav.context
    %ul
      %li
        = link_to t('.edit'), edit_article_path(@article) unless current_page?(edit_article_path(@article))
      %li
        = link_to t('.history', :count => @article.archived.count), article_history_index_path(@article)
      %li
        = t('.admin')
      %li
        = link_to t('.preview'), '#', :id => 'article-preview' if current_page?(edit_article_path(@article))
