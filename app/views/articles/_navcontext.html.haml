- if !@article.respond_to?("length") && !@article.new_record?
  %li= button_to t('.edit'), edit_article_path(@article), :class => "btn btn-danger btn-large", :method => :get unless current_page?(edit_article_path(@article))
  %li= button_to t('.history', :count => @article.archived.count), article_history_index_path(@article), :class => "btn btn-info", :method => :get

- if current_page?(edit_article_path(@article)) 
  %li= button_to t('.preview'), '#', :id => 'article-preview', :class => "btn", :remote => true if current_page?(edit_article_path(@article))
  %li= link_to "Markdown-Doku", "http://kramdown.rubyforge.org/quickref.html", target: "_blank"

%hr

- if current_page?(article_path(@article))
  %ul
    %li= link_to @article.user.username, @article.user
    %li= @article.updated_at
