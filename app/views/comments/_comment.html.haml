.media
  %a.pull-left{:href => "#", :name => "comment-#{comment.id}"}
    = image_tag comment.user.avatar, class: "media-object"
  .media-body
    %h4.media-heading
      = link_user comment.user
      %span.pull-right.text-muted
        = l comment.updated_at
    .autolinkable{:"data-ignores" => ""}
      = comment.content.html_safe

%hr
